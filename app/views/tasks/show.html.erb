<div class="container mt-5">
  <div class="card p-4 mx-auto" style="width: 50%; box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);">
      <%= link_to tasks_path do %>
        <i class="fa-solid fa-arrow-left-long fa-2xl" style="color: #C4503F;"></i>
      <% end %>
    <h1 class="text-center">Details :</h1>

    <div class="d-flex justify-content-between align-items-center">

      <div><%= @task.details %></div>

      <%= link_to tasks_edit_path(@task), data: { turbo_method: :get } do %>
        <i class="fa-solid fa-pen-to-square" style="color: #C4503F;"></i>
      <% end %>

      <%= link_to task_path(@task), data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete that Task?" }, style: "display: inline-block;" do %>
        <i class="btn btn fa-regular fa-trash-can" style="color: #C4503F;"></i>
      <% end %>
    </div>

  </div>
</div>
