<div class="container mt-5">
  <div class="card p-4 mx-auto" style="width: 50%; box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);">
    <h1 class="text-center">Tasks :</h1>
    <ul class="list-group">
      <% @tasks.each do |task| %>
        <li class="list-group-item d-flex justify-content-between align-items-center">
          <div class="form-check">
            <input class="form-check-input" type="checkbox" value="" id="task_<%= task.id %>">
            <label class="form-check-label" for="task_<%= task.id %>">
              <%= link_to task.title, task_path(task), class: 'text-decoration-none color-black' %>
            </label>
            <%= link_to task_path(task), data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete that Task?" } do %>
              <i class="btn btn fa-regular fa-trash-can" style="color: #C4503F;"></i>
            <% end %>
          </div>
        </li>
      <% end %>
    </ul>
    <div class ="text-center mt-10">
      <%= link_to tasks_new_path(@task), data: { turbo_method: :get } do %>
        <i class="fa-solid fa-plus fa-xl" style="color: #C4503F;"></i>
      <% end %>
    </div>
  </div>
</div>
